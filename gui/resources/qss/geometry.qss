/*
 * M D C O M B O B O X
 */

.MDComboBox {
    qproperty-focusPolicy: StrongFocus;
    font-size: 16px;
    min-width: 88px;
    min-height: 18px;
    padding: 8px 0px 8px 0px;
    margin: 28px 0px 8px 0px;
    qproperty-labelLeft: 0;
    qproperty-labelTop: 16;
    qproperty-labelTextWidth: 12;
    background-clip: content;
    border: none;
    border-bottom-width: 1px;
    border-bottom-style: solid;
}

.MDComboBox:focus {
    padding: 8px 0px 7px 0px;
    border-bottom-width: 2px;
}

.MDComboBox:disabled {
    border-bottom-style: dotted;
}

.MDComboBox:on {
    border-bottom-width: 2px;
    border-bottom-style: solid;
    padding: 8px 0px 7px 0px;
}

.MDComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: center right;
    /*width: 24px;
    height: 24px;*/
    padding-right: 16px;
    border: none;
}

.MDComboBox QAbstractItemView {
    qproperty-focusPolicy: NoFocus;
    font-size: 16px;
    border: none;
    background-clip: margin;
    padding: 8px 0px;
    border-width: 1px;
    border-style: solid;
    outline: 0;
}

.MDComboBox:on QAbstractItemView {
    border: none;
    border-width: 1px;
    border-style: solid;
}

.MDComboBox QAbstractItemView::item {
    border: none;
    min-height: 32px;
    padding: 0px 0px 0px 16px;
}

.MDComboBox QAbstractItemView::item:hover {
}

.MDComboBox::down-arrow {
    width: 24px;
    height: 24px;
}

.MDComboBox::down-arrow:on {
    /*top: 1px;
    left: 1px;*/
}



/*
 * Q S L I D E R
 */

QSlider {
    qproperty-focusPolicy: StrongFocus;
}

QSlider::groove:horizontal {
    border: none;
    height: 2px;
}

QSlider::handle:horizontal {
    width: 12px;
    margin: -5px 0;
    border: none;
    border-radius: 6px;
}

QSlider::add-page:horizontal {
}

QSlider::sub-page:horizontal {
}


QSlider::groove:vertical {
    border: none;
    width: 2px;
}

QSlider::handle:vertical {
    border: none;
    height: 12px;
    margin: 0 -5px;
    border-radius: 6px;
}

QSlider::add-page:vertical {
}

QSlider::sub-page:vertical {
}



/*
 * Q C O M B O B O X
 */

.QComboBox {
    padding-left: 12px;
    margin: 8px 8px 8px 0px;
    font-weight: 400;
    font-size: 15px;
    border: none;
    background-clip: margin;

}

/* vista del menu a discesa */
.QComboBox QAbstractItemView {
    padding: 8px 0px 8px 0x;
    border-style: solid;
    border-top-width: 1px;
    border-left-width: 1px;
    border-bottom-width: 2px;
    border-right-width: 2px;
    background-clip: margin;
}

/* item del menu a discesa */
.QComboBox::item {
    border: none;
    padding: 0px 0px 0px 12px;
    border-left: 10px solid red;
    min-height: 18px;
    max-height: 18px;
    font-family: Roboto;
    font-weight: 400;
    font-size: 15px;
}

.QComboBox::drop-down {
    margin: 0px 16px 0px 0px;
    border-left-width: 1px;
}

.QComboBox::down-arrow {
    width: 24px;
    height: 24px;
}



/*
 * Q P U S H B U T T O N
 */

QPushButton {
    padding: 0px 36px;
    margin: 6px 8px;
    border-width: 1px;
    border-style: solid;
    border-radius: 2px;
    min-width: 64px;
    min-height: 32px;
    max-height: 32px;
    font-size: 14px;
    font-weight: 600;
}



