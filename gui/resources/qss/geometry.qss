/*
 * M D L I N E E D I T
 */

.MDLineEdit {
    font-size: 16px;
    padding: 36px 0px 8px;
    max-height: 54px;
    min-height: 18px;
    margin: 0px 12px 8px;
    qproperty-labelX: 14;
    qproperty-labelY: 28;
    qproperty-labelTextWidth: 12;
    border: none;
    border-bottom-width: 1px;
    border-bottom-style: solid;
}

.MDLineEdit:focus {
    padding: 36px 0px 7px;
    border-bottom-width: 2px;
}

.MDLineEdit:read-only {
    padding: 36px 0px 8px;
    border-bottom-width: 1px;
}

.MDLineEdit:disabled {
    padding: 36px 0px 7px;
    border-bottom-width: 1px;
    border-bottom-style: dotted;
}



