    height: 24px;
}



/*
 * M D S W I T C H L I N E
 */

.MDSwitchLine {
    qproperty-focusPolicy: NoFocus;
    padding: 0px 16px;
    font-size: 13px;
    qproperty-imageLeftPadding: 16;
