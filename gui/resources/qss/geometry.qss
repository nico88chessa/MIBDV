    qproperty-imageWidth: 24;
    qproperty-imageHeight: 24;
    qproperty-layoutDirection: RightToLeft;
}

.MDSwitchLine:hover {
/*    background-color: blue;*/
}

.MDSwitchLine::indicator {
/*    border: 1px solid red;*/
