    height: 48px;
}



/*
 * M D L I S T W I D G E T
 */

.MDListWidget {
    qproperty-focusPolicy: NoFocus;
    font-size: 16px;
}

.MDListWidget::item:hover {
    padding: 0px;
}

.MDListWidget::item {
    padding: 0px 16px;
    min-height: 48px;
    background-clip: margin;
    qproperty-focusPolicy: NoFocus;
}

.MDListWidget MDCustomItem {
    font-size: 16px;
    qproperty-iconWidth: 24;
    qproperty-iconHeight: 24;
    qproperty-iconPaddingRight: 16;
    qproperty-focusPolicy: NoFocus;
}



/*
 * Q T A B W I D G E T  -  Q T A B B A R
 */


QTabBar {
/*    qproperty-drawBase: true;*/
    border: none;
    background-color: transparent;
}

QTabWidget {
    border: none;
}

QTabWidget::pane {
    border-top: none;
}

QTabWidget::tab-bar {
    left: 0px;
}

QTabBar::tab {
    font-size: 14px;
    font-weight: 500;
    background-color: transparent;
    background-origin: margin;
    min-width: 160px;
    min-height: 48px;
    padding: 0px 12px;
    border: none;
    border-radius: 0px;
/*    color: darkgray;*/
}

QTabBar::tab:selected, QTabBar::tab:hover {
}

QTabBar::tab:selected {
    border-bottom-width: 2px;
    border-bottom-style: solid;
}

QTabBar::tab:!selected {
    /*margin-top: 2px;*/
}



