/*
 * E R R O R   I T E M   W I D G E T
 */

.ErrorItemWidget {
    border-color: white;
    background-color: transparent;
    qproperty-infoIcon: url(:/icons/black-theme/info);
    qproperty-warningIcon: url(:/icons/black-theme/warning);
    qproperty-errorIcon: url(:/icons/black-theme/error);
    qproperty-fatalIcon: url(:/icons/black-theme/critical);
}

.ErrorItemWidget[focusCustom="true"],
.ErrorItemWidget[focusCustom="true"][isInfo~="true"],
.ErrorItemWidget[focusCustom="true"][isWarning~="true"],
.ErrorItemWidget[focusCustom="true"][isError~="true"],
.ErrorItemWidget[focusCustom="true"][isFatal~="true"]{
    color: green;
    background-color: yellow;
}

.ErrorItemWidget[isInfo="true"] {
    color: white;
    background-color: rgba(92,184,92);
}

.ErrorItemWidget[isWarning="true"] {
    color: black;
    background-color: rgba(226,164,31);
}

.ErrorItemWidget[isError="true"] {
    color: white;
    background-color: rgba(176,0,32);
}

.ErrorItemWidget[isFatal="true"] {
    color: rgba(255,255,255);
    background-color: rgba(66,66,66);
}
