/*
 *  M D C O M B O B O X
 */

.MDComboBox {
    border-bottom-color: rgba(0, 0, 0, 42%);
    background-color: transparent;
    qproperty-labelFocusColor: rgba(46, 125, 50, 87%);
    color: rgba(0, 0, 0, 54%);
}

.MDComboBox:hover {
    border-bottom-color: rgba(0, 0, 0, 87%);
}

.MDComboBox:focus {
    color: rgba(0, 0, 0, 87%);
    border-bottom-color: rgba(46, 125, 50, 100%);
}

.MDComboBox:disabled {
    color: rgba(0, 0, 0, 38%);
    border-bottom-color: rgba(0, 0, 0, 42%);
}

.MDComboBox:on {
    color: rgba(0, 0, 0, 87%);
    border-bottom-color: rgba(46, 125, 50, 100%);
}

.MDComboBox::drop-down {
}

.MDComboBox QAbstractItemView {
    background-color: white;
    /*selection-background-color: red;*/
}

.MDComboBox::on QAbstractItemView {
    border-color: green;
}

.MDComboBox QAbstractItemView::item {
    color: black;
}

.MDComboBox QAbstractItemView::item::hover {
    color: black;
    background-color: lightgray;
}

.MDComboBox QAbstractItemView::item::selected {
    color: green;
}

.MDComboBox::down-arrow {
    image: url(:/icons/black-theme/arrow_drop_down);
}

.MDComboBox::down-arrow:on {
    image: url(:/icons/black-theme/arrow_drop_up);
    /*top: 1px;
    left: 1px;*/
}



/*
 * Q S L I D E R
 */

QSlider::groove:horizontal {
    background-color: green;
}

QSlider::handle:horizontal {
    background-color: green;
}

QSlider::sub-page:horizontal {
    background-color: green;
}

QSlider::add-page:horizontal {
    background-color: lightgray;
}

QSlider::groove:vertical {
    background-color: green;
}

QSlider::handle:vertical {
    background-color: green;
}

QSlider::sub-page:vertical {
    background-color: green;
}

QSlider::add-page:vertical {
    background-color: lightgray;
}



/*
 * Q C O M B O B O X
 */

.QComboBox {
    background-color: white;
    border-bottom-color: green;
}

.QComboBox QAbstractItemView {
    border-style: solid;
    border-color: #E0E0E0;
    background-clip: margin;
    selection-background-color: lightgray;
    selection-color: black;
}

.QComboBox::down-arrow {
    image: url(:/icons/black-theme/arrow_drop_down);
}



/*
 * Q P U S H B U T T O N
 */

.QPushButton {
    border-color: transparent;
    color: white;
    background-color: #ffa726;
}

.QPushButton:hover {
    background-color: rgb(255, 217, 91);
}

.QPushButton:pressed {
    background-color: rgb(199, 120, 0);
}

.QPushButton:!enabled {
    background-color: rgba(0, 0, 0, 12%);
    color: rgba(0, 0, 0, 38%);
}

.QPushButton::on {
    color: red;
}



/*
 * Q P U S H B U T T O N - F L O A T I N G
 */

QPushButton[type="floating"] {
    background-color: #ffa726;
}

QPushButton[type="floating"]:hover {
    background-color: #ffd95b;
}

QPushButton[type="floating"]:disabled {
    background-color: rgb(0,0,0,38%);
}

QPushButton[type="floating"]:pressed {
    background-color: #c77800;
}



/*
 * Q P U S H B U T T O N - T O P B A R
 */

QPushButton[type="topbar"] {
    color: white;
    background-color: transparent;
}



/*
 * Q R A D I O B U T T O N
 */

QRadioButton {
    /*color: green;*/
}

QRadioButton::indicator::unchecked {
    image: url(:/icons/black-theme/radio_button-unchecked);
}

QRadioButton::indicator::checked {
    image: url(:/icons/black-theme/radio_button-checked);
}



/*
 * Q C H E C K B O X
 */

QCheckBox {
    /*color: green;*/
}

QCheckBox::indicator::unchecked {
    image: url(:/icons/black-theme/check_box_outline_blank);
}

QCheckBox::indicator::checked {
    image: url(:/icons/black-theme/check_box);
}

QCheckBox::indicator::unchecked[isDigitalIO = true] {
    image: url(:/icons/0d47a1/panorama_fish_eye);
}

QCheckBox::indicator::checked[isDigitalIO = true] {
    image: url(:/icons/0d47a1/lens);
}



/*
 * M D S W I T C H L I N E
 */

.MDSwitchLine {
    qproperty-imageOnEnable: url(:/icons/0d47a1/lens);
    qproperty-imageOnDisable: url(:/icons/disabled/lens);
    qproperty-imageOffEnable: url(:/icons/0d47a1/panorama_fish_eye);
    qproperty-imageOffDisable: url(:/icons/disabled/panorama_fish_eye);
}

.MDSwitchLine:!enabled {
    color: rgba(0, 0, 0, 38%);
}

.MDSwitchLine::indicator {
/*    border: 1px solid red;*/
}

.MDSwitchLine:hover {
/*    background-color: blue;*/
}

.MDSwitchLine::indicator:unchecked {
    image: url(:/icons/0d47a1/toggle_off);
}

.MDSwitchLine::indicator:checked {
    image: url(:/icons/0d47a1/toggle_on);
}

.MDSwitchLine::indicator:!enabled:unchecked {
    image: url(:/icons/disabled/toggle_off);
}

.MDSwitchLine::indicator:!enabled:checked {
    image: url(:/icons/disabled/toggle_on);
}



