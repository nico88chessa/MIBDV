/*
 * F I L E   E X P L O R E R   F R A M E
 */

.FileExplorerFrame #top {
    border-bottom-color: transparent;
    background-color: transparent;
}

.FileExplorerFrame #content {
    background-color: pink;
}

.FileExplorerFrame #lvExplorer {
    background-color: transparent;
    border-right-color: gray;
}

.FileExplorerFrame #top #pbDelete,
.FileExplorerFrame #top #pbRename {
    background-color: yellow;
}

.FileExplorerFrame #top #pbDelete:!enabled,
.FileExplorerFrame #top #pbRename:!enabled {
    background-color: lightgray;
}

.FileExplorerFrame #top #pbDelete {
    qproperty-icon: url(:/icons/black-theme/delete_forever);
}

.FileExplorerFrame #top #pbRename {
    qproperty-icon: url(:/icons/black-theme/rename);
}

.FileExplorerFrame MDFileExplorerWidget::item:hover {
    background-color: green;
}

.FileExplorerFrame MDFileExplorerWidget::item:selected {
    background-color: purple;
    color: white;
}


