/*
 * M O T I O N   F R A M E
 */

#stackedWidget {
    background-color: #0d47a1;
}

#tabMotion {
    background-color: transparent;
}

#tabMotion #pbMoveX, #tabMotion #pbMoveY, #tabMotion #pbMoveZ,
#tabMotion #pbStopX, #tabMotion #pbStopY, #tabMotion #pbStopZ {
    background-color: none;
    background-repeat: none;
    background-position: center center;
}

#tabMotion #pbMoveX,
#tabMotion #pbMoveY,
#tabMotion #pbMoveZ {
    background-image: url(:/icons/ffa726/play_circle_filled);
}

#tabMotion #pbMoveX:!enabled, #tabMotion #pbMoveY:!enabled, #tabMotion #pbMoveZ:!enabled {
    background-image: url(:/icons/disabled/play_circle_filled);
}

#tabMotion #pbStopX, #tabMotion #pbStopY, #tabMotion #pbStopZ {
    background-image: url(:/icons/ffa726/pause_circle_filled);
}

#tabMotion #pbStopX:hover,
#tabMotion #pbStopY:hover,
#tabMotion #pbStopZ:hover {
    background-image: url(:/icons/ffa726/pause_circle_filled_light);
}

#tabMotion #pbStopX:pressed,
#tabMotion #pbStopY:pressed,
#tabMotion #pbStopZ:pressed {
    background-image: url(:/icons/ffa726/pause_circle_filled_dark);
}

#tabMotion #pbStopX:!enabled, #tabMotion #pbStopY:!enabled, #tabMotion #pbStopZ:!enabled {
    background-image: url(:/icons/disabled/pause_circle_filled);
}

